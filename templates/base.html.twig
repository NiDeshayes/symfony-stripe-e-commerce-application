{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Stubborn{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="icon" type="image/png" href="{{ asset('images/products/logo.png') }}">
</head>
<body>
    <header>
        <div class="logo">
            <img src="{{ asset('images/products/logo.png') }}" alt="Stubborn">
            <div class="slogan">Don't compromise on your look</div>
        </div>
        <nav>
            <ul>
                <li><a href="{{ path('app_home_index') }}">Accueil</a></li>
                <li><a href="{{ path('products') }}">Boutique</a></li>
                <li><a href="{{ path('cart') }}">Panier</a></li>
            </ul>
        </nav>
    </header>

    <main>
        {% block body %}{% endblock %}
    </main>

    <footer>
        <p>&copy; 2024 Stubborn. All rights reserved.</p>
    </footer>
</body>
</html>
